<!DOCTYPE html>
<html>
<head>
  <title>CodeBatch</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
   <%= aced_tag %>
  <%= csrf_meta_tags %>
    <script type="text/javascript" src="//use.typekit.net/ylf5hub.js"></script>
<script type="text/javascript">try{Typekit.load();}catch(e){}</script>
</head>
<body class="posts">
  <header class="posts">
    <div class="content_wrap">
<div class="search"> Search</div>
<nav id="post_nav">
  <ul>
 <li id="list"> <%=link_to "New Batch", new_post_path %> </li>
   <li id="list"> <%= link_to "All Batches", posts_path %> </li>
   <li id="home"><%= link_to "Profile", home_path %> </li>
 </ul>
  </nav>
  <div class="status">
   <% if user_signed_in? %>
    Signed in as <%= current_user.username %> | 
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
    <% else %> 
    <%= link_to "Join", new_user_registration_path %> or <%= link_to "Sign In", new_user_session_path %> 
     <% end %>
    </div>
     </div>
     </header>
     <div class="flash">
      <% if notice %>
      <p class="notice"><%= notice %></p>
      <% end %>

      <% if alert %>
    <p class="alert"><%= notice %></p>
<% end %>
</div>
<%= yield %>
</body>
</html>