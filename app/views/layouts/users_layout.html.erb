<!DOCTYPE html>
<html>
<head>
  <title>CodeBatch</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
    <script type="text/javascript" src="//use.typekit.net/ylf5hub.js"></script>
<script type="text/javascript">try{Typekit.load();}catch(e){}</script>
</head>
<body class="user_layout">
  <header class="posts">
    <div class="content_wrap">
<div class="search">
<%= form_tag posts_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search], :placeholder => "Search" %>
        <%= image_submit_tag("search.png") %>
  </p>
<% end %>

</div>
<nav id="post_nav">
  <ul>
   <li id="list"> <%= link_to "Batches", posts_path %> </li>
    <li id="list"> <%=link_to "New Batch", new_post_path %> </li>
     <% if user_signed_in? %>
   <li id="home"><%= link_to "Profile", current_user %> </li>
    <li id="saved"><%= link_to "Saved", saved_path %>  </li>
  <% end%>
 </ul>
  </nav>
   <div class="status"><% if user_signed_in? %>
       Signed in as <%= link_to current_user.username, new_user_session_path %> | 
       <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
       <% else %> 
       <%= link_to "Join", new_user_registration_path %> or <%= link_to "Sign In", new_user_session_path %> 
       <% end %>
   </div>
     </div>
     </header>
     <div class="flash">
      <% if notice %>
      <p class="notice"><%= notice %></p>
      <% end %>

      <% if alert %>
    <p class="alert"><%= notice %></p>
<% end %>
</div>
<%= yield %>
</body>
</html>